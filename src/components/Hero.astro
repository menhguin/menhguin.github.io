<section class="min-h-screen flex items-center justify-center relative overflow-hidden">
  <div class="container mx-auto px-4">
    <h1 class="text-6xl md:text-8xl font-serif font-bold text-dark-blue opacity-0" id="hero-title">
      Jordan Blake
    </h1>
    <p class="text-xl md:text-2xl mt-4 text-slate-gray max-w-2xl opacity-0" id="hero-text">
      Creative Developer & Digital Craftsman
    </p>
    <div class="mt-8 opacity-0" id="hero-cta">
      <a href="#work" class="bg-dark-blue text-white px-8 py-3 rounded-lg hover:bg-opacity-90 transition-all">
        View My Work
      </a>
    </div>
  </div>
  <div class="absolute -z-10 opacity-0" id="hero-bg">
    <div class="w-96 h-96 bg-steel-blue/20 rounded-full blur-3xl"></div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';

  // Main timeline
  const tl = gsap.timeline({ defaults: { ease: "power3.out" } });

  // Animate elements
  tl.to("#hero-bg", {
    opacity: 1,
    duration: 1.5,
  })
  .from("#hero-bg", {
    scale: 0.8,
    duration: 1.5,
  }, "<")
  .to("#hero-title", {
    opacity: 1,
    y: 0,
    duration: 1,
  }, "-=1")
  .from("#hero-title", {
    y: 100,
  }, "<")
  .to("#hero-text", {
    opacity: 1,
    duration: 1,
  }, "-=0.5")
  .from("#hero-text", {
    y: 50,
  }, "<")
  .to("#hero-cta", {
    opacity: 1,
    duration: 1,
  }, "-=0.5")
  .from("#hero-cta", {
    y: 30,
  }, "<");

  // Floating animation for background
  gsap.to("#hero-bg", {
    y: 30,
    duration: 3,
    repeat: -1,
    yoyo: true,
    ease: "power1.inOut"
  });
</script> 